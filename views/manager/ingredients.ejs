    <%- include('../shared/head.ejs') %>
    <link rel="stylesheet" href="/css/manager.css">
    <link rel="stylesheet" href="/css/nav.css">
</head>
<body>
    <%- include('../shared/nav.ejs') %>
    <main>
        <% if(ingredients.length > 0)  { %>
            <div class="ingredients">
                <% ingredients.forEach(ing => { %>
                    <div class="ing-container">
                        <div class="image-container">
                            <img class="ing-image" src="<%= ing.imagePath %>" alt="<%= ing.title %>">
                        </div>
                        <h3 class="ing-title"><%= ing.title %></h3>
                        <p class="ing-price">$<%= ing.price %></p>
                        <div class="btns__container">
                            <a class="btn btn--ing" href="/manager/edit-ingredient/<%= ing._id %>">Edit</a>
                            <form action="/manager/delete-ingredient" method="POST">
                                <input type="hidden" name="id" value="<%= ing._id %>" />
                                <button class="btn btn--ing">Delete</button>
                            </form>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } else { %>
            <h1>No ingredients yet!</h1>
        <% } %>
    </main>
<%- include('../shared/end.ejs') %>
