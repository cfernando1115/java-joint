<%- include('../shared/head.ejs') %>
<link rel="stylesheet" href="/css/nav.css">
<link rel="stylesheet" href="/css/manager.css">
<link rel="stylesheet" href="/css/auth.css">
</head>
<body class="body">
<%- include('../shared/nav.ejs') %>
<main>
    <% if(errorMessage) { %>
        <div class="flash-message flash-message--error"><%= errorMessage %></div>
    <% } %>
    <div class="form-container">
        <h2><%= docTitle %></h2>
        <form id="login-form" class="add-item__form" method="POST" 
            action="/new-password">
            <label class="form__label" for="price">password</label>
            <input type="text" class="form__input" name="newPassword" />
            <input type="hidden" name="userId" value="<%= userId %>" />
            <input type="hidden" name="passwordToken" value="<%= passwordToken %>" />
            <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
            <button class="btn btn--submit" type="submit">Update Password</button>
        </form>
    </div>
</main>

<%- include('../shared/end.ejs') %>